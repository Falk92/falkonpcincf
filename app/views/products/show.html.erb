<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>

<p>
  <strong>Image url:</strong>
  <%= @product.image_url %>
</p>

<p>
  <strong>Color:</strong>
  <%= @product.colour %>
</p>

<p>
  <strong>Prize:</strong>
  <%= @product.prize %>
</p>

<%= form_tag "/payments/create" do %>
  <%= render partial: "shared/stripe_checkout_button" %>
<% end %>

<%= link_to 'Edit', edit_product_path(@product) %> |
<%= link_to 'Back', products_path %>

<div class="commentandrating">
  <p>Average Rating: <div class="rated" data-score="<%= @product.average_rating %>"></div> </p>

  <% if signed_in? %>
    <h4>Add a review:</h4>
    <%= form_for([@product, @product.comments.build]) do |f| %>
      <p>
        <%= f.label :body, "Comments" %><br>
        <%= f.text_area :body %>
      </p>
      <p>
        <div class="rating"></div>
      </p>
      <p>
        <%= f.submit "Submit" %>
      </p>
    <% end %>
  <% end %>
</div>

<div class="product-reviews">
  <% @comments.each do |comment| %>
    <div class="row">
      <hr>
      <p>
        <%= comment.user.first_name %>
        <small><em><%= "#{time_ago_in_words(comment.created_at)} ago" %></em></small> 
        <% if signed_in? && current_user.admin? %>
          <%= link_to ('<span class="glyphicon glyphicon-remove"></span>').html_safe, product_comment_path(@product, comment), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>
        <% end %>
      </p>
      <div class="rated" data-score="<%= comment.rating %>"></div>
      <p><%= "Rating: #{comment.rating}/5" %></p>
      <p><%= comment.body %></p> 
    </div>
  <% end %>
</div>

<%= will_paginate @comments %>